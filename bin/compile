#!/usr/bin/env bash

indent() {
    sed -u 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

PROCFILE=$(cat "${ENV_DIR}/PROCFILE")
PACKAGEJSON=$(cat "${ENV_DIR}/PACKAGEJSON")
PACKAGELOCKJSON=$(cat "${ENV_DIR}/PACKAGELOCKJSON")

if [[ -z "${PROCFILE}" ]]; then
    echo "PROCFILE was not set. Aborting" | indent
    exit 1
fi
if [[ -z "${PACKAGEJSON}" ]]; then
    echo "PACKAGEJSON was not set. Aborting" | indent
    exit 1
fi
if [[ -z "${PACKAGELOCKJSON}" ]]; then
    echo "PACKAGELOCKJSON was not set. Aborting" | indent
    exit 1
fi

cp "${BUILD_DIR}/${PROCFILE}" "${BUILD_DIR}/Procfile"
if ! [ $? ]; then
    echo "FAILED to copy a Procfile" | indent
    exit 1
fi
echo "Copied ${PROCFILE} as Procfile successfully" | indent

cp "${BUILD_DIR}/${PACKAGEJSON}" "${BUILD_DIR}/package.json"
if ! [ $? ]; then
    echo "FAILED to copy package.json" | indent
    exit 1
fi
echo "Copied ${PACKAGEJSON} as package.json successfully" | indent

cp "${BUILD_DIR}/${PACKAGELOCKJSON}" "${BUILD_DIR}/package-lock.json"
if ! [ $? ]; then
    echo "FAILED to copy package-lock.json" | indent
    exit 1
fi
echo "Copied ${PACKAGELOCKJSON} as package-lock.json successfully" | indent

# Leaving this in from the multi-procfile buildpack in case
# the app wants to express Heroku configuration in app.json
APP_DIR=$(dirname "${BUILD_DIR}/${PROCFILE}")

if [[ -f "${APP_DIR}/app.json" ]]; then
    cp "${APP_DIR}/app.json" "${BUILD_DIR}/app.json"
    echo "Copied ${APP_DIR}/app.json as app.json successfully" | indent
fi
